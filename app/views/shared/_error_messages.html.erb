<% if @word != nil %>
<% if @word.errors.any? %>
	<div id = "error_explanation">
		<div class = "alert alert-danger">
			The form contains <%= pluralize(@word.errors.count, "error") %>.
		</div>
		<ul>
		<% @word.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</div>
<% end %>
<% if @word.valid? %>
	<div class = "alert alert-success">
		You have successfully save <%= @word.word %> !
	</div>
<% end %>
<% end %>